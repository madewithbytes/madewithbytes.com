body{font-family:Geneva,lucida sans,lucida grande,lucida sans unicode,Verdana,sans-serif;height:100%;background:#f0f0d8;color:#666}a{text-decoration:none;color:#666;padding:3px 7px;background-color:#b4debe}a:link,a:visited{color:#666}a:hover,a:active{background-color:#b4debe}.logo a,.logo a:hover,.logo a:active,.image-detail,.image-detail:hover,.image-detail:active{background:0 0}h1,h2,h3,h4,h5{font-family:vt323,Garamond,hoefler text,Palatino,palatino linotype,serif;font-weight:400;font-size:2.8em}h2,h3,h4,h5{font-size:3em}pre{padding:2rem;overflow:scroll}p{line-height:1.8rem}img{width:100%}.wrapper{width:90%;max-width:62rem;margin:0 auto;display:grid;grid-template-columns:50% 50%}@media only screen and (max-width:60rem){.wrapper{display:block}}.row{grid-column:1/3}header{margin:2rem 0 0;height:3rem}.logo{float:left;margin:0;font-size:1.6em}nav{float:right}nav ul{margin:0}nav li{display:inline}.post{min-height:20rem;min-width:15rem;margin:.3rem;padding:1rem;background-color:rgba(0,0,0,.5);background-size:cover;background-repeat:no-repeat;background-position:center center}@media only screen and (max-width:60rem){.post{margin:0}}.post h3{height:15rem;color:#f0f0d8}.quote{font-weight:light;font-style:italic;font-size:1.5rem}.date{font-weight:light;font-size:1rem;font-style:italic}.youtube{position:relative;padding-bottom:56.25%;padding-top:25px;height:0}.youtube iframe{position:absolute;top:0;left:0;width:100%;height:100%}